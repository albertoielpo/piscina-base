{
    "name": "piscina-basic",
    "version": "1.0.0",
    "description": "Example project to play with piscina library",
    "main": "dist/main.js",
    "scripts": {
        "test": "jest --no-cache  --detectOpenHandles --runInBand --forceExit",
        "start:fibonacci": "tsc && node dist/fibonacci/fibonacci.main.js",
        "start:byte": "tsc && node --inspect=0.0.0.0 dist/byte-transfer/byte-transfer.main.js",
        "start": "tsc && node dist/main.js",
        "format": "prettier --write \"src/**/*.ts\"",
        "build": "tsc"
    },
    "author": "Alberto Ielpo <alberto.ielpo@gmail.com>",
    "repository": {
        "url": "https://github.com/albertoielpo/piscina-base.git"
    },
    "license": "MIT",
    "devDependencies": {
        "@types/node": "~22.8.6",
        "prettier": "~3.2.4",
        "typescript": "~5.6.3"
    },
    "dependencies": {
        "@nestjs/common": "~10.4.6",
        "piscina": "~4.7.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "testEnvironment": "node"
    }
}
